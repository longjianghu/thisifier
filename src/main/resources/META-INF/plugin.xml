<idea-plugin>
    <id>com.sohocn.thisifier</id>
    <name>Thisifier</name>
    <vendor email="support@sohocn.com" url="https://www.sohocn.com">SohoCN</vendor>

    <description><![CDATA[
    A plugin that adds 'this.' prefix to method calls in Java code with a simple right-click.
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="AddThisAction" class="com.sohocn.thisifier.actions.AddThisAction"
                text="Add 'this' to method call" description="Add 'this' prefix to method call">
            <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="CutCopyPasteGroup"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt T"/>
        </action>
    </actions>
</idea-plugin>