<idea-plugin>
    <id>com.sohocn.thisifier</id>
    <name>Thisifier</name>
    <vendor email="215241062@qq.com">龙江湖</vendor>

    <description><![CDATA[
   <p>一个简单的右键点击即可为Java代码中的方法调用添加 'this.' 前缀的插件。</p>
   <p>A plugin that adds 'this.' prefix to method calls in Java code with a simple right-click.</p>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="AddThisAction" class="com.sohocn.thisifier.actions.AddThisAction"
                text="Add 'this' to method call" description="Add 'this' prefix to method call">
            <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="CutCopyPasteGroup"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt T"/>
        </action>
    </actions>
</idea-plugin>